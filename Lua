	})
	
	-- Conte√∫do das tabs no lado direito
	local tabContent = CreateElement("Frame", {
		Name = "TabContent",
		Size = UDim2.new(1, -self.Save.TabSize - 10, 1, 0),
		Position = UDim2.new(0, self.Save.TabSize + 10, 0, 0),
		BackgroundTransparency = 1,
		Parent = contentArea
	})
	
	-- CONFIGURAR DRAG COM TOUCH
	CreateDraggable(mainFrame, titleBar)
	
	-- Feedback de drag funcionando
	task.spawn(function()
		task.wait(0.5)
		if UserInputService.TouchEnabled then
			print("üì± MODO TOUCH ATIVO - Arraste com o dedo!")
		else
			print("üñ±Ô∏è MODO MOUSE - Clique e arraste!")
		end
	end)
	
	-- Efeitos bot√£o fechar
	closeBtn.MouseButton1Click:Connect(function()
		TweenService:Create(mainFrame, TweenInfo.new(0.3), {
			Size = UDim2.new(0, 0, 0, 0),
			Position = UDim2.new(0.5, 0, 0.5, 0)
