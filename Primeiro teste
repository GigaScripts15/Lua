    BigKeyIcon.Image = Boladolib.Icons["key"]
    BigKeyIcon.ImageColor3 = Color3.fromRGB(255, 0, 247)
    BigKeyIcon.Parent = ContentFrame
    
    -- Mensagem
    local MessageLabel = Instance.new("TextLabel")
    MessageLabel.Name = "MessageLabel"
    MessageLabel.Size = UDim2.new(1, 0, 0, 60)
    MessageLabel.Position = UDim2.new(0, 0, 0, 110)
    MessageLabel.BackgroundTransparency = 1
    MessageLabel.Text = "Insira sua chave de acesso para usar o BoladoHub"
    MessageLabel.TextColor3 = Color3.fromRGB(220, 220, 220)
    MessageLabel.Font = Enum.Font.Gotham
    MessageLabel.TextSize = 14
    MessageLabel.TextWrapped = true
    MessageLabel.Parent = ContentFrame
    
    -- Input de texto
    local KeyInput = Instance.new("TextBox")
    KeyInput.Name = "KeyInput"
    KeyInput.Size = UDim2.new(1, 0, 0, 40)
    KeyInput.Position = UDim2.new(0, 0, 0, 180)
    KeyInput.BackgroundColor3 = Color3.fromRGB(40, 40, 50)
    KeyInput.BorderSizePixel = 0
    KeyInput.PlaceholderText = "Digite sua chave aqui..."
    KeyInput.Text = ""
    KeyInput.TextColor3 = Color3.fromRGB(255, 255, 255)
    KeyInput.Font = Enum.Font.Gotham
    KeyInput.TextSize = 14
    KeyInput.Parent = ContentFrame
    
    createCorner(KeyInput, 6)
    
    -- Bot√£o de verificar
    local VerifyButton = Instance.new("TextButton")
    VerifyButton.Name = "VerifyButton"
    VerifyButton.Size = UDim2.new(1, 0, 0, 40)
    VerifyButton.Position = UDim2.new(0, 0, 0, 230)
    VerifyButton.BackgroundColor3 = Color3.fromRGB(255, 0, 247)
    VerifyButton.BorderSizePixel = 0
    VerifyButton.Text = "VERIFICAR CHAVE"
    VerifyButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    VerifyButton.Font = Enum.Font.GothamBold
    VerifyButton.TextSize = 14
    VerifyButton.Parent = ContentFrame
    
    createCorner(VerifyButton, 6)
    
    -- Mensagem de erro/sucesso
    local StatusLabel = Instance.new("TextLabel")
    StatusLabel.Name = "StatusLabel"
    StatusLabel.Size = UDim2.new(1, 0, 0, 20)
    StatusLabel.Position = UDim2.new(0, 0, 0, 280)
    StatusLabel.BackgroundTransparency = 1
    StatusLabel.Text = ""
    StatusLabel.TextColor3 = Color3.fromRGB(255, 100, 100)
    StatusLabel.Font = Enum.Font.Gotham
    StatusLabel.TextSize = 12
    StatusLabel.Parent = ContentFrame
    
    -- Fun√ß√£o de verifica√ß√£o
    local function verifyKey()
        local key = KeyInput.Text
        if key == "" then
            StatusLabel.Text = "Por favor, insira uma chave"
            return
        end
        
        if Boladolib.KeySystem:VerifyKey(key) then
            StatusLabel.Text = "‚úÖ Chave verificada com sucesso!"
            StatusLabel.TextColor3 = Color3.fromRGB(100, 255, 100)
            
            -- Animar sucesso
            game:GetService("TweenService"):Create(VerifyButton, TweenInfo.new(0.3), {
                BackgroundColor3 = Color3.fromRGB(100, 255, 100)
            }):Play()
            
            -- Fechar ap√≥s 2 segundos
            task.wait(2)
            ScreenGui:Destroy()
            
            -- Criar a interface principal
            return true
        else
            StatusLabel.Text = "‚ùå Chave inv√°lida ou expirada"
            StatusLabel.TextColor3 = Color3.fromRGB(255, 100, 100)
            
            -- Animar erro
            game:GetService("TweenService"):Create(VerifyButton, TweenInfo.new(0.3), {
                BackgroundColor3 = Color3.fromRGB(255, 100, 100)
            }):Play()
            
            task.wait(0.5)
            game:GetService("TweenService"):Create(VerifyButton, TweenInfo.new(0.3), {
                BackgroundColor3 = Color3.fromRGB(255, 0, 247)
            }):Play()
            
            return false
        end
    end
    
    -- Conectar eventos
    VerifyButton.MouseButton1Click:Connect(verifyKey)
    KeyInput.FocusLost:Connect(function(enterPressed)
        if enterPressed then
            verifyKey()
        end
    end)
    
    -- Efeitos nos bot√µes
    VerifyButton.MouseEnter:Connect(function()
        game:GetService("TweenService"):Create(VerifyButton, TweenInfo.new(0.2), {
            BackgroundColor3 = Color3.fromRGB(255, 50, 247)
        }):Play()
    end)
    
    VerifyButton.MouseLeave:Connect(function()
        game:GetService("TweenService"):Create(VerifyButton, TweenInfo.new(0.2), {
            BackgroundColor3 = Color3.fromRGB(255, 0, 247)
        }):Play()
    end)
    
    -- Fechar ao clicar no fundo
    Background.MouseButton1Click:Connect(function()
        ScreenGui:Destroy()
    end)
    
    -- Focar no input
    KeyInput:CaptureFocus()
    
    return ScreenGui
end

-- Fun√ß√£o principal para criar janela (COM SISTEMA DE KEY)
function Boladolib:CreateWindow(options)
    local windowOptions = options or {}
    local title = windowOptions.Title or "BoladoHub"
    local theme = windowOptions.Theme or self.Save.Theme
    
    -- Verificar se precisa de key
    local requireKey = windowOptions.RequireKey or false
    
    if requireKey and not self.KeySystem.KeyVerified then
        -- Mostrar interface de key primeiro
        self.KeySystem:ShowKeyInput()
        
        -- Aguardar verifica√ß√£o
        local startTime = tick()
        while not self.KeySystem.KeyVerified do
            task.wait(0.1)
            if tick() - startTime > 30 then -- Timeout de 30 segundos
                warn("Timeout na verifica√ß√£o da chave")
                return nil
            end
        end
    end
    
    -- Criar a interface principal
    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Name = "BoladoHub"
    ScreenGui.Parent = CoreGui
    ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Global
    ScreenGui.DisplayOrder = 999
    ScreenGui.ResetOnSpawn = false

    self.Instances.ScreenGui = ScreenGui

    -- Frame principal com sombra
    local MainFrame = Instance.new("Frame")
    MainFrame.Name = "MainFrame"
    MainFrame.Size = UDim2.new(0, self.Save.UISize[1], 0, self.Save.UISize[2])
    MainFrame.Position = UDim2.new(0.5, -self.Save.UISize[1]/2, 0.5, -self.Save.UISize[2]/2)
    MainFrame.BackgroundColor3 = self.Themes[theme]["Color Hub 2"]
    MainFrame.BorderSizePixel = 0
    MainFrame.Parent = ScreenGui
    
    createShadow(MainFrame)
    createCorner(MainFrame, 12)

    -- Barra de t√≠tulo com gradiente
    local TitleBar = Instance.new("Frame")
    TitleBar.Name = "TitleBar"
    TitleBar.Size = UDim2.new(1, 0, 0, 40)
    TitleBar.BackgroundColor3 = self.Themes[theme]["Color Theme"]
    TitleBar.BorderSizePixel = 0
    TitleBar.Parent = MainFrame
    
    createSpecificCorner(TitleBar, 12, 12, 0, 0) -- CORRIGIDO

    -- Gradiente na barra de t√≠tulo
    local TitleGradient = Instance.new("UIGradient")
    TitleGradient.Color = ColorSequence.new({
        ColorSequenceKeypoint.new(0.0, self.Themes[theme]["Color Theme"]),
        ColorSequenceKeypoint.new(1.0, self.Themes[theme]["Color Accent"])
    })
    TitleGradient.Rotation = 45
    TitleGradient.Parent = TitleBar

    -- √çcone do hub
    local HubIcon = Instance.new("ImageLabel")
    HubIcon.Name = "HubIcon"
    HubIcon.Size = UDim2.new(0, 24, 0, 24)
    HubIcon.Position = UDim2.new(0, 12, 0.5, -12)
    HubIcon.BackgroundTransparency = 1
    HubIcon.Image = self.Icons["crown"]
    HubIcon.ImageColor3 = Color3.fromRGB(255, 255, 255)
    HubIcon.Parent = TitleBar

    -- T√≠tulo
    local TitleLabel = Instance.new("TextLabel")
    TitleLabel.Name = "TitleLabel"
    TitleLabel.Size = UDim2.new(1, -100, 1, 0)
    TitleLabel.Position = UDim2.new(0, 45, 0, 0)
    TitleLabel.BackgroundTransparency = 1
    TitleLabel.Text = "   " .. title
    TitleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    TitleLabel.Font = Enum.Font.GothamBold
    TitleLabel.TextSize = 16
    TitleLabel.TextXAlignment = Enum.TextXAlignment.Left
    TitleLabel.TextYAlignment = Enum.TextYAlignment.Center
    TitleLabel.Parent = TitleBar
    
    -- Mostrar key se verificada
    if self.KeySystem.KeyVerified then
        local KeyLabel = Instance.new("TextLabel")
        KeyLabel.Name = "KeyLabel"
        KeyLabel.Size = UDim2.new(0, 100, 1, 0)
        KeyLabel.Position = UDim2.new(1, -200, 0, 0)
        KeyLabel.BackgroundTransparency = 1
        KeyLabel.Text = "‚úì " .. (self.KeySystem.KeyData.Type or "Verified")
        KeyLabel.TextColor3 = Color3.fromRGB(100, 255, 100)
        KeyLabel.Font = Enum.Font.GothamBold
        KeyLabel.TextSize = 12
        KeyLabel.TextXAlignment = Enum.TextXAlignment.Right
        KeyLabel.TextYAlignment = Enum.TextYAlignment.Center
        KeyLabel.Parent = TitleBar
    end

    -- Sistema de drag touch
    local dragging = false
    local dragStart, startPos

    local function startDrag(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 or 
           input.UserInputType == Enum.UserInputType.Touch then
            dragging = true
            dragStart = input.Position
            startPos = MainFrame.Position
            
            game:GetService("TweenService"):Create(TitleBar, TweenInfo.new(0.1), {
                BackgroundTransparency = 0.1
            }):Play()
        end
    end

    local function updateDrag(input)
        if dragging and (input.UserInputType == Enum.UserInputType.MouseMovement or 
                         input.UserInputType == Enum.UserInputType.Touch) then
            local delta = input.Position - dragStart
            MainFrame.Position = UDim2.new(
                startPos.X.Scale,
                startPos.X.Offset + delta.X,
                startPos.Y.Scale,
                startPos.Y.Offset + delta.Y
            )
        end
    end

    local function endDrag(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 or 
           input.UserInputType == Enum.UserInputType.Touch then
            dragging = false
            
            game:GetService("TweenService"):Create(TitleBar, TweenInfo.new(0.1), {
                BackgroundTransparency = 0
            }):Play()
        end
    end

    -- Conectar eventos de arrasto
    TitleBar.InputBegan:Connect(startDrag)
    TitleBar.InputChanged:Connect(updateDrag)
    TitleBar.InputEnded:Connect(endDrag)
    TitleLabel.InputBegan:Connect(startDrag)
    TitleLabel.InputChanged:Connect(updateDrag)
    TitleLabel.InputEnded:Connect(endDrag)

    -- Bot√µes da barra de t√≠tulo
    local MinimizeButton = Instance.new("TextButton")
    MinimizeButton.Name = "MinimizeButton"
    MinimizeButton.Size = UDim2.new(0, 28, 0, 28)
    MinimizeButton.Position = UDim2.new(1, -65, 0.5, -14)
    MinimizeButton.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
    MinimizeButton.BackgroundTransparency = 0.9
    MinimizeButton.Text = "‚îÄ"
    MinimizeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    MinimizeButton.Font = Enum.Font.GothamBold
    MinimizeButton.TextSize = 18
    MinimizeButton.Parent = TitleBar
    
    createCorner(MinimizeButton, 6)

    MinimizeButton.MouseButton1Click:Connect(function()
        self.Save.Minimized = not self.Save.Minimized
        local content = MainFrame:FindFirstChild("ContentFrame")
        local tabs = MainFrame:FindFirstChild("TabsFrame")
        
        if self.Save.Minimized then
            MainFrame.Size = UDim2.new(0, self.Save.UISize[1], 0, 40)
            if content then content.Visible = false end
            if tabs then tabs.Visible = false end
            MinimizeButton.Text = "‚ñ°"
        else
            MainFrame.Size = UDim2.new(0, self.Save.UISize[1], 0, self.Save.UISize[2])
            if content then content.Visible = true end
            if tabs then tabs.Visible = true end
            MinimizeButton.Text = "‚îÄ"
        end
    end)

    local CloseButton = Instance.new("TextButton")
    CloseButton.Name = "CloseButton"
    CloseButton.Size = UDim2.new(0, 28, 0, 28)
    CloseButton.Position = UDim2.new(1, -30, 0.5, -14)
    CloseButton.BackgroundColor3 = Color3.fromRGB(255, 85, 85)
    CloseButton.Text = "√ó"
    CloseButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    CloseButton.Font = Enum.Font.GothamBold
    CloseButton.TextSize = 20
    CloseButton.Parent = TitleBar
    
    createCorner(CloseButton, 6)

    CloseButton.MouseButton1Click:Connect(function()
        ScreenGui:Destroy()
        self.Instances.ScreenGui = nil
    end)

    -- Efeitos nos bot√µes
    local function setupButtonEffects(button, hoverColor)
        button.MouseEnter:Connect(function()
            game:GetService("TweenService"):Create(button, TweenInfo.new(0.2), {
                BackgroundTransparency = 0.8
            }):Play()
        end)
        
        button.MouseLeave:Connect(function()
            game:GetService("TweenService"):Create(button, TweenInfo.new(0.2), {
                BackgroundTransparency = button == CloseButton and 0 or 0.9
            }):Play()
        end)
    end

    setupButtonEffects(MinimizeButton)
    setupButtonEffects(CloseButton)

    -- Frame de abas (sidebar)
    local TabsFrame = Instance.new("Frame")
    TabsFrame.Name = "TabsFrame"
    TabsFrame.Size = UDim2.new(0, self.Save.TabSize, 1, -40)
    TabsFrame.Position = UDim2.new(0, 0, 0, 40)
    TabsFrame.BackgroundColor3 = self.Themes[theme]["Color Hub 2"]
    TabsFrame.BorderSizePixel = 0
    TabsFrame.Parent = MainFrame

    local SidebarGradient = Instance.new("UIGradient")
    SidebarGradient.Color = ColorSequence.new({
        ColorSequenceKeypoint.new(0.0, self.Themes[theme]["Color Hub 2"]),
        ColorSequenceKeypoint.new(1.0, Color3.fromRGB(
            self.Themes[theme]["Color Hub 2"].R * 0.9,
            self.Themes[theme]["Color Hub 2"].G * 0.9,
            self.Themes[theme]["Color Hub 2"].B * 0.9
        ))
    })
    SidebarGradient.Rotation = 90
    SidebarGradient.Parent = TabsFrame

    local TabsList = Instance.new("ScrollingFrame")
    TabsList.Name = "TabsList"
    TabsList.Size = UDim2.new(1, 0, 1, -20)
    TabsList.Position = UDim2.new(0, 0, 0, 20)
    TabsList.BackgroundTransparency = 1
    TabsList.BorderSizePixel = 0
    TabsList.ScrollBarThickness = 3
    TabsList.ScrollBarImageColor3 = self.Themes[theme]["Color Theme"]
    TabsList.Parent = TabsFrame

    local UIListLayout = Instance.new("UIListLayout")
    UIListLayout.Padding = UDim.new(0, 8)
    UIListLayout.Parent = TabsList

    -- Frame de conte√∫do
    local ContentFrame = Instance.new("Frame")
    ContentFrame.Name = "ContentFrame"
    ContentFrame.Size = UDim2.new(1, -self.Save.TabSize, 1, -40)
    ContentFrame.Position = UDim2.new(0, self.Save.TabSize, 0, 40)
    ContentFrame.BackgroundColor3 = self.Themes[theme]["Color Hub 2"]
    ContentFrame.BorderSizePixel = 0
    ContentFrame.Parent = MainFrame

    -- Armazenar inst√¢ncias
    self.Instances.MainFrame = MainFrame
    self.Instances.TabsList = TabsList
    self.Instances.ContentFrame = ContentFrame
    self.Instances.Theme = theme

    -- Sistema de redimensionamento
    self:SetupResize(MainFrame)

    return {
        ScreenGui = ScreenGui,
        MainFrame = MainFrame,
        ContentFrame = ContentFrame,
        TabsList = TabsList,
        TitleBar = TitleBar
    }
end

-- Fun√ß√£o para criar bot√µes
function Boladolib:CreateButton(options)
    local btnOptions = options or {}
    local parent = btnOptions.Parent
    local position = btnOptions.Position or UDim2.new(0, 0, 0, 0)
    local size = btnOptions.Size or UDim2.new(1, -20, 0, 36)
    local text = btnOptions.Text or "Button"
    local callback = btnOptions.Callback or function() end
    local icon = btnOptions.Icon

    local theme = self.Instances.Theme or self.Save.Theme
    local currentTheme = self.Themes[theme]

    local Button = Instance.new("TextButton")
    Button.Name = "Button"
    Button.Size = size
    Button.Position = position
    Button.BackgroundColor3 = currentTheme["Color Hub 2"]
    Button.BorderColor3 = currentTheme["Color Stroke"]
    Button.BorderSizePixel = 1
    Button.Text = ""
    Button.Parent = parent

    createCorner(Button, 6)

    -- Gradiente de fundo
    local ButtonGradient = Instance.new("UIGradient")
    ButtonGradient.Color = ColorSequence.new({
        ColorSequenceKeypoint.new(0.0, currentTheme["Color Hub 2"]),
        ColorSequenceKeypoint.new(1.0, Color3.fromRGB(
            currentTheme["Color Hub 2"].R * 1.1,
            currentTheme["Color Hub 2"].G * 1.1,
            currentTheme["Color Hub 2"].B * 1.1
        ))
    })
    ButtonGradient.Parent = Button

    -- Container para conte√∫do
    local ContentFrame = Instance.new("Frame")
    ContentFrame.Name = "ContentFrame"
    ContentFrame.Size = UDim2.new(1, 0, 1, 0)
    ContentFrame.BackgroundTransparency = 1
    ContentFrame.Parent = Button

    -- √çcone (se fornecido)
    if icon and self.Icons[icon] then
        local Icon = Instance.new("ImageLabel")
        Icon.Name = "Icon"
        Icon.Size = UDim2.new(0, 20, 0, 20)
        Icon.Position = UDim2.new(0, 12, 0.5, -10)
        Icon.BackgroundTransparency = 1
        Icon.Image = self.Icons[icon]
        Icon.ImageColor3 = currentTheme["Color Text"]
        Icon.Parent = ContentFrame
    end

    -- Texto
    local TextLabel = Instance.new("TextLabel")
    TextLabel.Name = "TextLabel"
    TextLabel.Size = UDim2.new(1, -20, 1, 0)
    TextLabel.Position = UDim2.new(0, icon and 40 or 12, 0, 0)
    TextLabel.BackgroundTransparency = 1
    TextLabel.Text = text
    TextLabel.TextColor3 = currentTheme["Color Text"]
    TextLabel.Font = Enum.Font.Gotham
    TextLabel.TextSize = 13
    TextLabel.TextXAlignment = Enum.TextXAlignment.Left
    TextLabel.TextYAlignment = Enum.TextYAlignment.Center
    TextLabel.Parent = ContentFrame

    -- Efeitos de hover
    Button.MouseEnter:Connect(function()
        game:GetService("TweenService"):Create(Button, TweenInfo.new(0.2), {
            BackgroundColor3 = currentTheme["Color Theme"],
            BorderColor3 = currentTheme["Color Accent"]
        }):Play()
        
        if ButtonGradient then
            ButtonGradient.Enabled = false
        end
    end)

    Button.MouseLeave:Connect(function()
        game:GetService("TweenService"):Create(Button, TweenInfo.new(0.2), {
            BackgroundColor3 = currentTheme["Color Hub 2"],
            BorderColor3 = currentTheme["Color Stroke"]
        }):Play()
        
        if ButtonGradient then
            ButtonGradient.Enabled = true
        end
    end)

    Button.MouseButton1Down:Connect(function()
        game:GetService("TweenService"):Create(Button, TweenInfo.new(0.1), {
            BackgroundColor3 = currentTheme["Color Accent"],
            Size = size - UDim2.new(0, 2, 0, 2)
        }):Play()
    end)

    Button.MouseButton1Up:Connect(function()
        game:GetService("TweenService"):Create(Button, TweenInfo.new(0.1), {
            BackgroundColor3 = currentTheme["Color Theme"],
            Size = size
        }):Play()
        callback()
    end)

    return Button
end

-- Fun√ß√£o para criar abas
function Boladolib:CreateTab(options)
    local tabOptions = options or {}
    local name = tabOptions.Name or "Tab"
    local icon = tabOptions.Icon or "folder"

    local theme = self.Instances.Theme or self.Save.Theme
    local currentTheme = self.Themes[theme]

    local TabButton = Instance.new("TextButton")
    TabButton.Name = name .. "Tab"
    TabButton.Size = UDim2.new(1, -16, 0, 42)
    TabButton.BackgroundColor3 = currentTheme["Color Hub 2"]
    TabButton.BorderSizePixel = 0
    TabButton.Text = ""
    TabButton.Parent = self.Instances.TabsList
    
    createCorner(TabButton, 8)

    -- Gradiente na aba
    local TabGradient = Instance.new("UIGradient")
    TabGradient.Color = ColorSequence.new({
        ColorSequenceKeypoint.new(0.0, currentTheme["Color Hub 2"]),
        ColorSequenceKeypoint.new(1.0, Color3.fromRGB(
            currentTheme["Color Hub 2"].R * 1.05,
            currentTheme["Color Hub 2"].G * 1.05,
            currentTheme["Color Hub 2"].B * 1.05
        ))
    })
    TabGradient.Parent = TabButton

    -- Container para conte√∫do
    local ContentContainer = Instance.new("Frame")
    ContentContainer.Name = "ContentContainer"
    ContentContainer.Size = UDim2.new(1, 0, 1, 0)
    ContentContainer.BackgroundTransparency = 1
    ContentContainer.Parent = TabButton

    -- √çcone
    local Icon = Instance.new("ImageLabel")
    Icon.Name = "Icon"
    Icon.Size = UDim2.new(0, 24, 0, 24)
    Icon.Position = UDim2.new(0, 12, 0.5, -12)
    Icon.BackgroundTransparency = 1
    Icon.Image = self.Icons[icon] or self.Icons["folder"]
    Icon.ImageColor3 = currentTheme["Color Text"]
    Icon.Parent = ContentContainer

    -- Label
    local Label = Instance.new("TextLabel")
    Label.Name = "Label"
    Label.Size = UDim2.new(1, -50, 1, 0)
    Label.Position = UDim2.new(0, 46, 0, 0)
    Label.BackgroundTransparency = 1
    Label.Text = name
    Label.TextColor3 = currentTheme["Color Text"]
    Label.Font = Enum.Font.GothamMedium
    Label.TextSize = 13
    Label.TextXAlignment = Enum.TextXAlignment.Left
    Label.TextYAlignment = Enum.TextYAlignment.Center
    Label.Parent = ContentContainer

    -- Indicador de sele√ß√£o
    local SelectionIndicator = Instance.new("Frame")
    SelectionIndicator.Name = "SelectionIndicator"
    SelectionIndicator.Size = UDim2.new(0, 4, 0.6, 0)
    SelectionIndicator.Position = UDim2.new(0, 0, 0.2, 0)
    SelectionIndicator.BackgroundColor3 = currentTheme["Color Theme"]
    SelectionIndicator.BorderSizePixel = 0
    SelectionIndicator.Visible = false
    SelectionIndicator.Parent = TabButton
    
    createCorner(SelectionIndicator, 2)

    -- Conte√∫do da aba
    local Content = Instance.new("ScrollingFrame")
    Content.Name = name .. "Content"
    Content.Size = UDim2.new(1, 0, 1, 0)
    Content.BackgroundTransparency = 1
    Content.BorderSizePixel = 0
    Content.ScrollBarThickness = 4
    Content.ScrollBarImageColor3 = currentTheme["Color Theme"]
    Content.Visible = false
    Content.Parent = self.Instances.ContentFrame

    local ContentLayout = Instance.new("UIListLayout")
    ContentLayout.Padding = UDim.new(0, 8)
    ContentLayout.Parent = Content

    local ContentPadding = Instance.new("UIPadding")
    ContentPadding.PaddingTop = UDim.new(0, 10)
    ContentPadding.PaddingLeft = UDim.new(0, 10)
    ContentPadding.PaddingRight = UDim.new(0, 10)
    ContentPadding.Parent = Content

    -- Fun√ß√£o para selecionar aba
    local function selectTab()
        -- Esconder todos os conte√∫dos
        for _, child in pairs(self.Instances.ContentFrame:GetChildren()) do
            if child:IsA("ScrollingFrame") then
                child.Visible = false
            end
        end

        -- Mostrar conte√∫do da aba selecionada
        Content.Visible = true

        -- Atualizar apar√™ncia das abas
        for _, tab in pairs(self.Instances.TabsList:GetChildren()) do
            if tab:IsA("TextButton") then
                local indicator = tab:FindFirstChild("SelectionIndicator")
                local tabGradient = tab:FindFirstChildOfClass("UIGradient")
                local icon = tab:FindFirstChild("ContentContainer") and 
                            tab.ContentContainer:FindFirstChild("Icon")
                local label = tab:FindFirstChild("ContentContainer") and 
                             tab.ContentContainer:FindFirstChild("Label")
                
                if tab == TabButton then
                    -- Aba selecionada
                    game:GetService("TweenService"):Create(tab, TweenInfo.new(0.3), {
                        BackgroundColor3 = currentTheme["Color Theme"]
                    }):Play()
                    
                    if indicator then
                        indicator.Visible = true
                        game:GetService("TweenService"):Create(indicator, TweenInfo.new(0.3), {
                            BackgroundColor3 = Color3.fromRGB(255, 255, 255)
                        }):Play()
                    end
                    
                    if tabGradient then
                        tabGradient.Enabled = false
                    end
                    
                    if icon then
                        game:GetService("TweenService"):Create(icon, TweenInfo.new(0.3), {
                            ImageColor3 = Color3.fromRGB(255, 255, 255)
                        }):Play()
                    end
                    
                    if label then
                        game:GetService("TweenService"):Create(label, TweenInfo.new(0.3), {
                            TextColor3 = Color3.fromRGB(255, 255, 255)
                        }):Play()
                    end
                else
                    -- Abas n√£o selecionadas
                    game:GetService("TweenService"):Create(tab, TweenInfo.new(0.3), {
                        BackgroundColor3 = currentTheme["Color Hub 2"]
                    }):Play()
                    
                    if indicator then
                        indicator.Visible = false
                    end
                    
                    if tabGradient then
                        tabGradient.Enabled = true
                    end
                    
                    if icon then
                        game:GetService("TweenService"):Create(icon, TweenInfo.new(0.3), {
                            ImageColor3 = currentTheme["Color Text"]
                        }):Play()
                    end
                    
                    if label then
                        game:GetService("TweenService"):Create(label, TweenInfo.new(0.3), {
                            TextColor3 = currentTheme["Color Text"]
                        }):Play()
                    end
                end
            end
        end
    end

    -- Efeitos de hover na aba
    TabButton.MouseEnter:Connect(function()
        if not SelectionIndicator.Visible then
            game:GetService("TweenService"):Create(TabButton, TweenInfo.new(0.2), {
                BackgroundColor3 = Color3.fromRGB(
                    currentTheme["Color Hub 2"].R * 1.1,
                    currentTheme["Color Hub 2"].G * 1.1,
                    currentTheme["Color Hub 2"].B * 1.1
                )
            }):Play()
            
            if TabGradient then
                TabGradient.Enabled = false
            end
        end
    end)

    TabButton.MouseLeave:Connect(function()
        if not SelectionIndicator.Visible then
            game:GetService("TweenService"):Create(TabButton, TweenInfo.new(0.2), {
                BackgroundColor3 = currentTheme["Color Hub 2"]
            }):Play()
            
            if TabGradient then
                TabGradient.Enabled = true
            end
        end
    end)

    TabButton.MouseButton1Click:Connect(selectTab)

    -- Selecionar primeira aba
    if #self.Instances.TabsList:GetChildren() == 1 then
        selectTab()
    end

    self.Tabs[name] = {
        Button = TabButton,
        Content = Content,
        Icon = Icon,
        Label = Label
    }

    return Content
end

-- Fun√ß√£o para criar label
function Boladolib:CreateLabel(options)
    local labelOptions = options or {}
    local parent = labelOptions.Parent
    local text = labelOptions.Text or "Label"
    local color = labelOptions.Color or self.Themes[self.Instances.Theme]["Color Text"]
    local header = labelOptions.Header or false

    local Label = Instance.new("TextLabel")
    Label.Name = "Label"
    Label.Size = UDim2.new(1, -20, 0, header and 30 or 24)
    Label.Position = UDim2.new(0, 10, 0, 0)
    Label.BackgroundTransparency = 1
    Label.Text = text
    Label.TextColor3 = color
    Label.Font = header and Enum.Font.GothamBold or Enum.Font.Gotham
    Label.TextSize = header and 16 or 14
    Label.TextXAlignment = Enum.TextXAlignment.Left
    Label.TextYAlignment = Enum.TextYAlignment.Center
    Label.Parent = parent

    -- Adicionar linha divis√≥ria para headers
    if header then
        local Divider = Instance.new("Frame")
        Divider.Name = "Divider"
        Divider.Size = UDim2.new(1, -20, 0, 1)
        Divider.Position = UDim2.new(0, 10, 1, 0)
        Divider.BackgroundColor3 = self.Themes[self.Instances.Theme]["Color Stroke"]
        Divider.BorderSizePixel = 0
        Divider.Parent = Label
    end

    return Label
end

-- Fun√ß√£o para criar separador
function Boladolib:CreateSeparator(options)
    local sepOptions = options or {}
    local parent = sepOptions.Parent
    local margin = sepOptions.Margin or 20

    local Separator = Instance.new("Frame")
    Separator.Name = "Separator"
    Separator.Size = UDim2.new(1, -margin * 2, 0, 1)
    Separator.Position = UDim2.new(0, margin, 0, 0)
    Separator.BackgroundColor3 = self.Themes[self.Instances.Theme]["Color Stroke"]
    Separator.BorderSizePixel = 0
    Separator.Parent = parent

    return Separator
end

-- Sistema de redimensionamento
function Boladolib:SetupResize(frame)
    local resizeButton = Instance.new("TextButton")
    resizeButton.Name = "ResizeButton"
    resizeButton.Size = UDim2.new(0, 16, 0, 16)
    resizeButton.Position = UDim2.new(1, -16, 1, -16)
    resizeButton.BackgroundTransparency = 0.7
    resizeButton.BackgroundColor3 = self.Themes[self.Instances.Theme]["Color Theme"]
    resizeButton.BorderSizePixel = 0
    resizeButton.Text = "‚Üò"
    resizeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    resizeButton.Font = Enum.Font.GothamBold
    resizeButton.TextSize = 12
    resizeButton.Parent = frame
    
    createCorner(resizeButton, 4)

    local dragging = false
    local dragStart, startSize

    resizeButton.MouseButton1Down:Connect(function(input)
        dragging = true
        dragStart = input.Position
        startSize = frame.Size
    end)

    UserInputService.InputChanged:Connect(function(input)
        if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
            local delta = input.Position - dragStart
            local newWidth = math.clamp(startSize.X.Offset + delta.X, 450, 900)
            local newHeight = math.clamp(startSize.Y.Offset + delta.Y, 300, 700)

            frame.Size = UDim2.new(0, newWidth, 0, newHeight)
            
            -- Manter posi√ß√£o central
            frame.Position = UDim2.new(
                0.5, -newWidth/2,
                0.5, -newHeight/2
            )

            self.Save.UISize = {newWidth, newHeight}
        end
    end)

    UserInputService.InputEnded:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = false
        end
    end)
end

-- Fun√ß√£o para mudar tema
function Boladolib:SetTheme(themeName)
    if not self.Themes[themeName] then
        themeName = "NeonPink"
    end

    self.Save.Theme = themeName

    if self.Instances.MainFrame then
        local theme = self.Themes[themeName]
        
        -- Atualizar cores principais
        self.Instances.MainFrame.BackgroundColor3 = theme["Color Hub 2"]

        local titleBar = self.Instances.MainFrame:FindFirstChild("TitleBar")
        if titleBar then
            titleBar.BackgroundColor3 = theme["Color Theme"]
            
            local titleGradient = titleBar:FindFirstChildOfClass("UIGradient")
            if titleGradient then
                titleGradient.Color = ColorSequence.new({
                    ColorSequenceKeypoint.new(0.0, theme["Color Theme"]),
                    ColorSequenceKeypoint.new(1.0, theme["Color Accent"])
                })
            end
            
            local titleLabel = titleBar:FindFirstChild("TitleLabel")
            if titleLabel then
                titleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
            end
        end

        local tabsFrame = self.Instances.MainFrame:FindFirstChild("TabsFrame")
        if tabsFrame then
            tabsFrame.BackgroundColor3 = theme["Color Hub 2"]
            
            local sidebarGradient = tabsFrame:FindFirstChildOfClass("UIGradient")
            if sidebarGradient then
                sidebarGradient.Color = ColorSequence.new({
                    ColorSequenceKeypoint.new(0.0, theme["Color Hub 2"]),
                    ColorSequenceKeypoint.new(1.0, Color3.fromRGB(
                        theme["Color Hub 2"].R * 0.9,
                        theme["Color Hub 2"].G * 0.9,
                        theme["Color Hub 2"].B * 0.9
                    ))
                })
            end
        end

        local contentFrame = self.Instances.MainFrame:FindFirstChild("ContentFrame")
        if contentFrame then
            contentFrame.BackgroundColor3 = theme["Color Hub 2"]
        end

        -- Atualizar tema na inst√¢ncia
        self.Instances.Theme = themeName
        
        -- Atualizar elementos existentes (simplificado)
        for _, tab in pairs(self.Tabs) do
            if tab.Button then
                tab.Button.BackgroundColor3 = theme["Color Hub 2"]
            end
        end
    end
end

function Boladolib:Destroy()
    if self.Instances.ScreenGui then
        self.Instances.ScreenGui:Destroy()
        self.Instances = {}
        self.Elements = {}
        self.Tabs = {}
    end
end

-- Inicializar sistema de keys
Boladolib.KeySystem:FetchKeysFromServer()

return Boladolib