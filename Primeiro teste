-- Fun√ß√£o auxiliar para criar cantos arredondados (CORRIGIDA)
local function createCorner(parent, radius)
    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, radius or 8)
    corner.Parent = parent
    return corner
end

-- Fun√ß√£o para criar cantos arredondados espec√≠ficos
local function createSpecificCorner(parent, topLeft, topRight, bottomRight, bottomLeft)
    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, topLeft or 0, 0, topRight or 0, 0, bottomRight or 0, 0, bottomLeft or 0)
    corner.Parent = parent
    return corner
end

-- Fun√ß√£o para criar sombra
local function createShadow(parent)
    local shadow = Instance.new("ImageLabel")
    shadow.Name = "Shadow"
    shadow.Size = UDim2.new(1, 10, 1, 10)
    shadow.Position = UDim2.new(0, -5, 0, -5)
    shadow.BackgroundTransparency = 1
    shadow.Image = "rbxassetid://5554236805"
    shadow.ImageColor3 = Color3.fromRGB(0, 0, 0)
    shadow.ImageTransparency = 0.8
    shadow.ScaleType = Enum.ScaleType.Slice
    shadow.SliceCenter = Rect.new(10, 10, 118, 118)
    shadow.Parent = parent
    return shadow
end

-- Sistema de Key Functions
function Boladolib.KeySystem:VerifyKey(key)
    -- Verificar localmente primeiro (keys padr√£o)
    for _, validKey in ipairs(self.Keys) do
        if key == validKey then
            self.KeyVerified = true
            self.KeyData = {
                Key = key,
                Type = "Standard",
                Expires = nil -- Chave permanente
            }
            return true
        end
    end
    
    -- Verificar keys do servidor (se houver)
    if self.ValidKeys and #self.ValidKeys > 0 then
        for _, validKey in ipairs(self.ValidKeys) do
            if key == validKey then
                self.KeyVerified = true
                self.KeyData = {
                    Key = key,
                    Type = "Premium",
                    Expires = nil
                }
                return true
            end
        end
    end
    
    return false
end

function Boladolib.KeySystem:FetchKeysFromServer()
    -- Fun√ß√£o para obter keys do servidor (simulada)
    -- Em um sistema real, voc√™ faria uma requisi√ß√£o HTTP
    self.ValidKeys = {
        "PREMIUM-USER-001",
        "VIP-ACCESS-2024",
        "BETA-TESTER-456"
    }
end

function Boladolib.KeySystem:ShowKeyInput()
    if self.KeyVerified then return end
    
    -- Criar GUI de input de key
    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Name = "KeyInputGUI"
    ScreenGui.Parent = CoreGui
    ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Global
    ScreenGui.DisplayOrder = 1000
    
    -- Fundo escuro
    local Background = Instance.new("Frame")
    Background.Name = "Background"
    Background.Size = UDim2.new(1, 0, 1, 0)
    Background.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
    Background.BackgroundTransparency = 0.5
    Background.Parent = ScreenGui
    
    -- Janela principal
    local MainFrame = Instance.new("Frame")
    MainFrame.Name = "MainFrame"
    MainFrame.Size = UDim2.new(0, 400, 0, 300)
    MainFrame.Position = UDim2.new(0.5, -200, 0.5, -150)
    MainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 40)
    MainFrame.BorderSizePixel = 0
    MainFrame.Parent = ScreenGui
    
    createSpecificCorner(MainFrame, 12, 12, 12, 12)
    createShadow(MainFrame)
    
    -- Barra de t√≠tulo
    local TitleBar = Instance.new("Frame")
    TitleBar.Name = "TitleBar"
    TitleBar.Size = UDim2.new(1, 0, 0, 40)
    TitleBar.BackgroundColor3 = Color3.fromRGB(255, 0, 247)
    TitleBar.BorderSizePixel = 0
    TitleBar.Parent = MainFrame
    
    createSpecificCorner(TitleBar, 12, 12, 0, 0)
    
    -- Gradiente na barra de t√≠tulo
    local TitleGradient = Instance.new("UIGradient")
    TitleGradient.Color = ColorSequence.new({
        ColorSequenceKeypoint.new(0.0, Color3.fromRGB(255, 0, 247)),
        ColorSequenceKeypoint.new(1.0, Color3.fromRGB(255, 100, 247))
    })
    TitleGradient.Rotation = 45
    TitleGradient.Parent = TitleBar
    
    -- √çcone de chave
    local KeyIcon = Instance.new("ImageLabel")
    KeyIcon.Name = "KeyIcon"
    KeyIcon.Size = UDim2.new(0, 24, 0, 24)
    KeyIcon.Position = UDim2.new(0, 12, 0.5, -12)
    KeyIcon.BackgroundTransparency = 1
    KeyIcon.Image = Boladolib.Icons["key"]
    KeyIcon.ImageColor3 = Color3.fromRGB(255, 255, 255)
    KeyIcon.Parent = TitleBar
    
    -- T√≠tulo
    local TitleLabel = Instance.new("TextLabel")
    TitleLabel.Name = "TitleLabel"
    TitleLabel.Size = UDim2.new(1, -50, 1, 0)
    TitleLabel.Position = UDim2.new(0, 45, 0, 0)
    TitleLabel.BackgroundTransparency = 1
    TitleLabel.Text = "Verifica√ß√£o de Chave"
    TitleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    TitleLabel.Font = Enum.Font.GothamBold
    TitleLabel.TextSize = 16
    TitleLabel.TextXAlignment = Enum.TextXAlignment.Left
    TitleLabel.TextYAlignment = Enum.TextYAlignment.Center
    TitleLabel.Parent = TitleBar
    
    -- Conte√∫do
    local ContentFrame = Instance.new("Frame")
    ContentFrame.Name = "ContentFrame"
    ContentFrame.Size = UDim2.new(1, -40, 1, -80)
    ContentFrame.Position = UDim2.new(0, 20, 0, 50)
    ContentFrame.BackgroundTransparency = 1
    ContentFrame.Parent = MainFrame
    
    -- √çcone grande
    local BigKeyIcon = Instance.new("ImageLabel")
    BigKeyIcon.Name = "BigKeyIcon"
    BigKeyIcon.Size = UDim2.new(0, 80, 0, 80)
