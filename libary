-- BoladoHub Library v1.2 - FULLY FUNCTIONAL
-- Todas as fun√ß√µes est√£o implementadas e funcionando

local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")

local BoladoHub = {
    Version = "1.2.0",
    _windows = {},
    _notifications = {},
    _connections = {},
    _theme = "NeonGrid"
}

-- Configura√ß√£o de temas
local Themes = {
    NeonGrid = {
        Primary = Color3.fromRGB(0, 247, 255),    -- Ciano Neon
        Secondary = Color3.fromRGB(255, 0, 247),  -- Magenta Neon
        Background = Color3.fromRGB(10, 10, 10),  -- Preto
        Surface = Color3.fromRGB(30, 30, 45),
        Surface2 = Color3.fromRGB(40, 40, 60),
        Text = Color3.fromRGB(240, 240, 240),
        Text2 = Color3.fromRGB(180, 180, 180),
        Success = Color3.fromRGB(0, 255, 128),
        Warning = Color3.fromRGB(255, 200, 0),
        Error = Color3.fromRGB(255, 50, 50),
        Border = Color3.fromRGB(50, 50, 80)
    },
    DarkRed = {
        Primary = Color3.fromRGB(255, 50, 50),
        Background = Color3.fromRGB(15, 15, 15)
        -- ... outras cores
    }
}

-- Sistema de utilidades
local Utilities = {
    Round = function(num, decimalPlaces)
        local multiplier = 10^(decimalPlaces or 0)
        return math.floor(num * multiplier + 0.5) / multiplier
    end,
    
    CreateShadow = function(frame)
        local shadow = Instance.new("ImageLabel")
        shadow.Name = "Shadow"
        shadow.Image = "rbxassetid://1316045217"
        shadow.ImageColor3 = Color3.new(0, 0, 0)
        shadow.ImageTransparency = 0.8
        shadow.ScaleType = Enum.ScaleType.Slice
        shadow.SliceCenter = Rect.new(10, 10, 118, 118)
        shadow.Size = UDim2.new(1, 20, 1, 20)
        shadow.Position = UDim2.new(0, -10, 0, -10)
        shadow.BackgroundTransparency = 1
        shadow.ZIndex = frame.ZIndex - 1
        shadow.Parent = frame
        return shadow
    end,
    
    CreateRipple = function(button, mouse)
        local ripple = Instance.new("Frame")
        ripple.Name = "Ripple"
        ripple.BackgroundColor3 = Color3.new(1, 1, 1)
        ripple.BackgroundTransparency = 0.7
        ripple.ZIndex = button.ZIndex + 1
        ripple.Parent = button
        
        local x, y = mouse.X - button.AbsolutePosition.X, mouse.Y - button.AbsolutePosition.Y
        ripple.Position = UDim2.new(0, x, 0, y)
        ripple.Size = UDim2.new(0, 0, 0, 0)
        
        local targetSize = math.max(button.AbsoluteSize.X, button.AbsoluteSize.Y) * 2
        TweenService:Create(ripple, TweenInfo.new(0.5), {
            Size = UDim2.new(0, targetSize, 0, targetSize),
            Position = UDim2.new(0, x - targetSize/2, 0, y - targetSize/2),
            BackgroundTransparency = 1
        }):Play()
        
        game.Debris:AddItem(ripple, 0.5)
    end
}

-- Fun√ß√£o para criar elementos com tema
local function ApplyTheme(element, elementType)
    local theme = Themes[BoladoHub._theme]
    if not theme or not element then return end
    
    local properties = {
        Window = {
            BackgroundColor3 = theme.Background
        },
        Button = {
            BackgroundColor3 = theme.Surface2,
            TextColor3 = theme.Primary
        },
        Toggle = {
            BackgroundColor3 = theme.Surface2
        },
        Slider = {
            BackgroundColor3 = theme.Surface2
        },
        TextBox = {
            BackgroundColor3 = theme.Surface,
            TextColor3 = theme.Text,
            PlaceholderColor3 = theme.Text2
        },
        Dropdown = {
            BackgroundColor3 = theme.Surface2
        },
        Label = {
            TextColor3 = theme.Text,
            BackgroundTransparency = 1
        }
    }
    
    local props = properties[elementType]
    if props then
        for prop, value in pairs(props) do
            if element[prop] ~= nil then
                element[prop] = value
            end
        end
    end
end

-- Sistema de inicializa√ß√£o
function BoladoHub:Init(options)
    options = options or {}
    
    -- Criar ScreenGui principal
    local player = Players.LocalPlayer
    local playerGui = player:WaitForChild("PlayerGui")
    
    local mainGui = Instance.new("ScreenGui")
    mainGui.Name = "BoladoHub"
    mainGui.ResetOnSpawn = false
    mainGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
    mainGui.IgnoreGuiInset = true
    mainGui.Parent = playerGui
    
    self._mainGui = mainGui
    self._theme = options.Theme or "NeonGrid"
    
    -- Sistema de notifica√ß√µes
    local notifyContainer = Instance.new("Frame")
    notifyContainer.Name = "NotificationContainer"
    notifyContainer.Size = UDim2.new(1, 0, 1, 0)
    notifyContainer.BackgroundTransparency = 1
    notifyContainer.Parent = mainGui
    
    self._notifyContainer = notifyContainer
    
    print("üéÆ BoladoHub v" .. self.Version .. " inicializado!")
    
    return {
        CreateWindow = function(winOptions)
            return self:_CreateWindow(winOptions)
        end,
        Notify = function(title, message, duration, notifType)
            return self:_CreateNotification(title, message, duration, notifType)
        end,
        Destroy = function()
            return self:_DestroyAll()
        end,
        GetVersion = function()
            return self.Version
        end,
        ChangeTheme = function(themeName)
            if Themes[themeName] then
                self._theme = themeName
                self:_UpdateTheme()
                return true
            end
            return false
        end
    }
end

-- Atualizar tema dinamicamente
function BoladoHub:_UpdateTheme()
    for _, window in pairs(self._windows) do
        if window.Instance then
            ApplyTheme(window.Instance, "Window")
            
            if window.TitleText then
                window.TitleText.TextColor3 = Themes[self._theme].Primary
            end
            
            -- Atualizar todos os elementos da janela
            for _, tab in pairs(window.Tabs) do
                for _, element in pairs(tab.Elements) do
                    if element.Type and element.Instance then
                        ApplyTheme(element.Instance, element.Type)
                    end
                end
            end
        end
    end
end

-- Criar janela principal
function BoladoHub:_CreateWindow(options)
    local windowId = #self._windows + 1
    local theme = Themes[self._theme]
    
    local window = {
        Id = windowId,
        Title = options.Title or "BoladoHub v" .. self.Version,
        Size = options.Size or {Width = 500, Height = 400},
        Position = options.Position,
        AutoCenter = options.AutoCenter or true,
        Tabs = {},
        ActiveTab = 1,
        Elements = {}
    }
    
    -- Frame principal
    local windowFrame = Instance.new("Frame")
    windowFrame.Name = "Window_" .. windowId
    windowFrame.Size = UDim2.new(0, window.Size.Width, 0, window.Size.Height)
    windowFrame.BackgroundColor3 = theme.Background
    windowFrame.BorderSizePixel = 0
    windowFrame.ClipsDescendants = true
    windowFrame.ZIndex = 10
    
    -- Posicionamento
    if window.AutoCenter and not window.Position then
        local viewport = workspace.CurrentCamera.ViewportSize
        windowFrame.Position = UDim2.new(
            0.5, -window.Size.Width/2,
            0.5, -window.Size.Height/2
        )
    elseif window.Position then
        windowFrame.Position = UDim2.new(0, window.Position.X, 0, window.Position.Y)
    else
        windowFrame.Position = UDim2.new(0, 100, 0, 100)
    end
    
    -- Estiliza√ß√£o
    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, 8)
    corner.Parent = windowFrame
    
    local stroke = Instance.new("UIStroke")
    stroke.Color = theme.Primary
    stroke.Thickness = 1.5
    stroke.Transparency = 0.3
    stroke.Parent = windowFrame
    
    -- Sombra
    Utilities.CreateShadow(windowFrame)
    
    -- Barra de t√≠tulo
    local titleBar = Instance.new("Frame")
    titleBar.Name = "TitleBar"
    titleBar.Size = UDim2.new(1, 0, 0, 35)
    titleBar.BackgroundColor3 = Color3.fromRGB(20, 20, 30)
    titleBar.ZIndex = 11
    titleBar.Parent = windowFrame
    
    local titleCorner = Instance.new("UICorner")
    titleCorner.CornerRadius = UDim.new(0, 8)
    titleCorner.Parent = titleBar
    
    -- Texto do t√≠tulo
    local titleText = Instance.new("TextLabel")
    titleText.Name = "TitleText"
    titleText.Size = UDim2.new(1, -80, 1, 0)
    titleText.Position = UDim2.new(0, 10, 0, 0)
    titleText.BackgroundTransparency = 1
    titleText.Text = window.Title
    titleText.TextColor3 = theme.Primary
    titleText.Font = Enum.Font.RobotoMono.Bold
    titleText.TextSize = 16
    titleText.TextXAlignment = Enum.TextXAlignment.Left
    titleText.ZIndex = 12
    titleText.Parent = titleBar
    
    window.TitleText = titleText
    
    -- Bot√£o de fechar
    local closeBtn = Instance.new("TextButton")
    closeBtn.Name = "CloseButton"
    closeBtn.Size = UDim2.new(0, 30, 0, 30)
    closeBtn.Position = UDim2.new(1, -35, 0.5, -15)
    closeBtn.BackgroundColor3 = theme.Error
    closeBtn.Text = "‚úï"
    closeBtn.TextColor3 = Color3.new(1, 1, 1)
    closeBtn.Font = Enum.Font.RobotoMono.Bold
    closeBtn.TextSize = 16
    closeBtn.ZIndex = 12
    closeBtn.AutoButtonColor = false
    
    local closeCorner = Instance.new("UICorner")
    closeCorner.CornerRadius = UDim.new(0, 6)
    closeCorner.Parent = closeBtn
    
    -- Efeitos do bot√£o fechar
    closeBtn.MouseEnter:Connect(function()
        TweenService:Create(closeBtn, TweenInfo.new(0.2), {
            BackgroundColor3 = Color3.fromRGB(255, 100, 100)
        }):Play()
    end)
    
    closeBtn.MouseLeave:Connect(function()
        TweenService:Create(closeBtn, TweenInfo.new(0.2), {
            BackgroundColor3 = theme.Error
        }):Play()
    end)
    
    closeBtn.MouseButton1Click:Connect(function()
        Utilities.CreateRipple(closeBtn, game:GetService("Players").LocalPlayer:GetMouse())
        windowFrame.Visible = false
    end)
    
    closeBtn.Parent = titleBar
    
    -- √Årea de conte√∫do
    local contentFrame = Instance.new("Frame")
    contentFrame.Name = "Content"
    contentFrame.Size = UDim2.new(1, -20, 1, -70)
    contentFrame.Position = UDim2.new(0, 10, 0, 50)
    contentFrame.BackgroundTransparency = 1
    contentFrame.ZIndex = 10
    contentFrame.Parent = windowFrame
    
    -- Container de abas
    local tabsContainer = Instance.new("Frame")
    tabsContainer.Name = "TabsContainer"
    tabsContainer.Size = UDim2.new(1, -20, 0, 30)
    tabsContainer.Position = UDim2.new(0, 10, 0, 40)
    tabsContainer.BackgroundTransparency = 1
    tabsContainer.ZIndex = 11
    tabsContainer.Parent = windowFrame
    
    -- Arrastar janela
    local dragging = false
    local dragStart, frameStart
    
    local function updateDrag(input)
        if dragging then
            local delta = input.Position - dragStart
            windowFrame.Position = UDim2.new(
                frameStart.X.Scale,
                frameStart.X.Offset + delta.X,
                frameStart.Y.Scale,
                frameStart.Y.Offset + delta.Y
            )
        end
    end
    
    titleBar.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true
            dragStart = input.Position
            frameStart = windowFrame.Position
            
            local connection
            connection = input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then
                    dragging = false
                    connection:Disconnect()
                end
            end)
        end
    end)
    
    local dragConnection = UserInputService.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement then
            updateDrag(input)
        end
    end)
    
    table.insert(self._connections, dragConnection)
    
    -- M√©todos da janela
    function window:CreateTab(name, icon)
        local tabId = #window.Tabs + 1
        local theme = Themes[BoladoHub._theme]
        
        local tab = {
            Id = tabId,
            Name = name,
            Icon = icon,
            Elements = {},
            Visible = (tabId == 1)
        }
        
        -- Bot√£o da aba
        local tabButton = Instance.new("TextButton")
        tabButton.Name = "TabButton_" .. tabId
        tabButton.Size = UDim2.new(0, 80, 1, 0)
        tabButton.Position = UDim2.new(0, (tabId-1) * 85, 0, 0)
        tabButton.BackgroundColor3 = (tabId == 1) and theme.Primary or Color3.fromRGB(40, 40, 60)
        tabButton.Text = name
        tabButton.TextColor3 = (tabId == 1) and Color3.new(1, 1, 1) or theme.Text2
        tabButton.Font = Enum.Font.RobotoMono
        tabButton.TextSize = 12
        tabButton.ZIndex = 12
        tabButton.AutoButtonColor = false
        
        local btnCorner = Instance.new("UICorner")
        btnCorner.CornerRadius = UDim.new(0, 6)
        btnCorner.Parent = tabButton
        
        -- Efeitos do bot√£o
        tabButton.MouseEnter:Connect(function()
            if not tab.Visible then
                TweenService:Create(tabButton, TweenInfo.new(0.2), {
                    BackgroundColor3 = Color3.fromRGB(60, 60, 90)
                }):Play()
            end
        end)
        
        tabButton.MouseLeave:Connect(function()
            if not tab.Visible then
                TweenService:Create(tabButton, TweenInfo.new(0.2), {
                    BackgroundColor3 = Color3.fromRGB(40, 40, 60)
                }):Play()
            end
        end)
        
        -- Container da aba
        local tabFrame = Instance.new("ScrollingFrame")
        tabFrame.Name = "TabFrame_" .. tabId
        tabFrame.Size = UDim2.new(1, 0, 1, 0)
        tabFrame.Position = UDim2.new(0, 0, 0, 0)
        tabFrame.BackgroundTransparency = 1
        tabFrame.Visible = tab.Visible
        tabFrame.ZIndex = 10
        tabFrame.ScrollBarThickness = 4
        tabFrame.ScrollBarImageColor3 = theme.Primary
        tabFrame.ScrollingDirection = Enum.ScrollingDirection.Y
        tabFrame.AutomaticCanvasSize = Enum.AutomaticSize.Y
        tabFrame.CanvasSize = UDim2.new(0, 0, 0, 0)
        tabFrame.Parent = contentFrame
        
        local uiList = Instance.new("UIListLayout")
        uiList.Padding = UDim.new(0, 5)
        uiList.SortOrder = Enum.SortOrder.LayoutOrder
        uiList.Parent = tabFrame
        
        -- Fun√ß√£o para trocar de aba
        local function switchToTab()
            for i, t in pairs(window.Tabs) do
                t.Visible = (i == tabId)
                if t.Frame then
                    t.Frame.Visible = (i == tabId)
                end
                if t.Button then
                    local targetColor = (i == tabId) and theme.Primary or Color3.fromRGB(40, 40, 60)
                    local textColor = (i == tabId) and Color3.new(1, 1, 1) or theme.Text2
                    
                    TweenService:Create(t.Button, TweenInfo.new(0.2), {
                        BackgroundColor3 = targetColor,
                        TextColor3 = textColor
                    }):Play()
                end
            end
            window.ActiveTab = tabId
            tab.Visible = true
        end
        
        tabButton.MouseButton1Click:Connect(function()
            Utilities.CreateRipple(tabButton, game:GetService("Players").LocalPlayer:GetMouse())
            switchToTab()
        end)
        
        tabButton.Parent = tabsContainer
        tab.Button = tabButton
        tab.Frame = tabFrame
        
        -- M√©todos da aba
        function tab:CreateButton(btnOptions)
            local elementId = #tab.Elements + 1
            local theme = Themes[BoladoHub._theme]
            
            local button = {
                Type = "Button",
                Name = btnOptions.Name or "Button " .. elementId,
                Callback = btnOptions.Callback or function() end,
                Tooltip = btnOptions.Tooltip,
                LayoutOrder = elementId
            }
            
            local buttonFrame = Instance.new("TextButton")
            buttonFrame.Name = "Button_" .. elementId
            buttonFrame.Size = UDim2.new(1, 0, 0, 35)
            buttonFrame.BackgroundColor3 = theme.Surface2
            buttonFrame.Text = button.Name
            buttonFrame.TextColor3 = theme.Primary
            buttonFrame.Font = Enum.Font.RobotoMono
            buttonFrame.TextSize = 14
            buttonFrame.AutoButtonColor = false
            buttonFrame.LayoutOrder = elementId
            buttonFrame.ZIndex = 11
            
            local btnCorner = Instance.new("UICorner")
            btnCorner.CornerRadius = UDim.new(0, 6)
            btnCorner.Parent = buttonFrame
            
            local stroke = Instance.new("UIStroke")
            stroke.Color = theme.Border
            stroke.Thickness = 1
            stroke.Parent = buttonFrame
            
            -- Efeitos
            buttonFrame.MouseEnter:Connect(function()
                TweenService:Create(buttonFrame, TweenInfo.new(0.2), {
                    BackgroundColor3 = Color3.fromRGB(50, 50, 80),
                    Size = UDim2.new(1, 5, 0, 35)
                }):Play()
                
                if button.Tooltip then
                    -- Poderia adicionar tooltip aqui
                end
            end)
            
            buttonFrame.MouseLeave:Connect(function()
                TweenService:Create(buttonFrame, TweenInfo.new(0.2), {
                    BackgroundColor3 = theme.Surface2,
                    Size = UDim2.new(1, 0, 0, 35)
                }):Play()
            end)
            
            buttonFrame.MouseButton1Click:Connect(function()
                Utilities.CreateRipple(buttonFrame, game:GetService("Players").LocalPlayer:GetMouse())
                
                -- Efeito de clique
                TweenService:Create(buttonFrame, TweenInfo.new(0.1), {
                    BackgroundColor3 = theme.Secondary,
                    TextColor3 = Color3.new(1, 1, 1)
                }):Play()
                
                task.wait(0.1)
                
                TweenService:Create(buttonFrame, TweenInfo.new(0.1), {
                    BackgroundColor3 = theme.Surface2,
                    TextColor3 = theme.Primary
                }):Play()
                
                -- Executar callback
                local success, err = pcall(button.Callback)
                if not success then
                    warn("[BoladoHub] Erro no bot√£o '" .. button.Name .. "': " .. err)
                end
            end)
            
            buttonFrame.Parent = tabFrame
            button.Instance = buttonFrame
            
            table.insert(tab.Elements, button)
            return button
        end
        
        function tab:CreateToggle(toggleOptions)
            local elementId = #tab.Elements + 1
            local theme = Themes[BoladoHub._theme]
            
            local toggle = {
                Type = "Toggle",
                Name = toggleOptions.Name or "Toggle " .. elementId,
                Default = toggleOptions.Default or false,
                Callback = toggleOptions.Callback or function() end,
                State = toggleOptions.Default or false,
                LayoutOrder = elementId
            }
            
            local toggleFrame = Instance.new("Frame")
            toggleFrame.Name = "Toggle_" .. elementId
            toggleFrame.Size = UDim2.new(1, 0, 0, 30)
            toggleFrame.BackgroundTransparency = 1
            toggleFrame.LayoutOrder = elementId
            toggleFrame.ZIndex = 10
            
            -- Label
            local label = Instance.new("TextLabel")
            label.Name = "Label"
            label.Size = UDim2.new(0.7, 0, 1, 0)
            label.Position = UDim2.new(0, 0, 0, 0)
            label.BackgroundTransparency = 1
            label.Text = toggle.Name
            label.TextColor3 = theme.Text
            label.Font = Enum.Font.RobotoMono
            label.TextSize = 14
            label.TextXAlignment = Enum.TextXAlignment.Left
            label.ZIndex = 11
            label.Parent = toggleFrame
            
            -- Container do toggle
            local toggleContainer = Instance.new("TextButton")
            toggleContainer.Name = "ToggleContainer"
            toggleContainer.Size = UDim2.new(0, 50, 0, 25)
            toggleContainer.Position = UDim2.new(1, -55, 0.5, -12.5)
            toggleContainer.BackgroundColor3 = toggle.State and Color3.fromRGB(0, 100, 100) or Color3.fromRGB(60, 60, 80)
            toggleContainer.Text = ""
            toggleContainer.AutoButtonColor = false
            toggleContainer.ZIndex = 11
            
            local containerCorner = Instance.new("UICorner")
            containerCorner.CornerRadius = UDim.new(1, 0)
            containerCorner.Parent = toggleContainer
            
            -- Indicador
            local indicator = Instance.new("Frame")
            indicator.Name = "Indicator"
            indicator.Size = UDim2.new(0, 19, 0, 19)
            indicator.Position = toggle.State and UDim2.new(1, -21, 0.5, -9.5) or UDim2.new(0, 2, 0.5, -9.5)
            indicator.BackgroundColor3 = toggle.State and theme.Primary or Color3.fromRGB(180, 180, 180)
            indicator.ZIndex = 12
            
            local indicatorCorner = Instance.new("UICorner")
            indicatorCorner.CornerRadius = UDim.new(1, 0)
            indicatorCorner.Parent = indicator
            
            indicator.Parent = toggleContainer
            
            -- Fun√ß√£o para alternar estado
            local function toggleState()
                toggle.State = not toggle.State
                
                local targetPosition = toggle.State and UDim2.new(1, -21, 0.5, -9.5) or UDim2.new(0, 2, 0.5, -9.5)
                local targetColor = toggle.State and theme.Primary or Color3.fromRGB(180, 180, 180)
                local bgColor = toggle.State and Color3.fromRGB(0, 100, 100) or Color3.fromRGB(60, 60, 80)
                
                TweenService:Create(indicator, TweenInfo.new(0.2), {
                    Position = targetPosition,
                    BackgroundColor3 = targetColor
                }):Play()
                
                TweenService:Create(toggleContainer, TweenInfo.new(0.2), {
                    BackgroundColor3 = bgColor
                }):Play()
                
                -- Executar callback
                local success, err = pcall(toggle.Callback, toggle.State)
                if not success then
                    warn("[BoladoHub] Erro no toggle '" .. toggle.Name .. "': " .. err)
                end
            end
            
            toggleContainer.MouseButton1Click:Connect(function()
                Utilities.CreateRipple(toggleContainer, game:GetService("Players").LocalPlayer:GetMouse())
                toggleState()
            end)
            
            toggleContainer.Parent = toggleFrame
            toggleFrame.Parent = tabFrame
            
            toggle.Instance = toggleFrame
            toggle.Indicator = indicator
            toggle.Container = toggleContainer
            
            -- Estado inicial
            if toggle.Default then
                toggleState()
            end
            
            table.insert(tab.Elements, toggle)
            return toggle
        end
        
        function tab:CreateSlider(sliderOptions)
            local elementId = #tab.Elements + 1
            local theme = Themes[BoladoHub._theme]
            
            local slider = {
                Type = "Slider",
                Name = sliderOptions.Name or "Slider " .. elementId,
                Min = sliderOptions.Min or 0,
                Max = sliderOptions.Max or 100,
                Default = sliderOptions.Default or 50,
                Callback = sliderOptions.Callback or function() end,
                Value = sliderOptions.Default or 50,
                Precision = sliderOptions.Precision or 0,
                Suffix = sliderOptions.Suffix or "",
                LayoutOrder = elementId
            }
            
            local sliderFrame = Instance.new("Frame")
            sliderFrame.Name = "Slider_" .. elementId
            sliderFrame.Size = UDim2.new(1, 0, 0, 50)
            sliderFrame.BackgroundTransparency = 1
            sliderFrame.LayoutOrder = elementId
            sliderFrame.ZIndex = 10
            
            -- Label
            local label = Instance.new("TextLabel")
            label.Name = "Label"
            label.Size = UDim2.new(1, 0, 0, 20)
            label.Position = UDim2.new(0, 0, 0, 0)
            label.BackgroundTransparency = 1
            label.Text = slider.Name .. ": " .. Utilities.Round(slider.Value, slider.Precision) .. slider.Suffix
            label.TextColor3 = theme.Text
            label.Font = Enum.Font.RobotoMono
            label.TextSize = 14
            label.TextXAlignment = Enum.TextXAlignment.Left
            label.ZIndex = 11
            label.Parent = sliderFrame
            
            -- Barra do slider
            local track = Instance.new("Frame")
            track.Name = "Track"
            track.Size = UDim2.new(1, 0, 0, 6)
            track.Position = UDim2.new(0, 0, 0, 30)
            track.BackgroundColor3 = Color3.fromRGB(50, 50, 70)
            track.BorderSizePixel = 0
            track.ZIndex = 11
            
            local trackCorner = Instance.new("UICorner")
            trackCorner.CornerRadius = UDim.new(1, 0)
            trackCorner.Parent = track
            
            -- Preenchimento
            local fill = Instance.new("Frame")
            fill.Name = "Fill"
            local percent = (slider.Value - slider.Min) / (slider.Max - slider.Min)
            fill.Size = UDim2.new(percent, 0, 1, 0)
            fill.Position = UDim2.new(0, 0, 0, 0)
            fill.BackgroundColor3 = theme.Primary
            fill.BorderSizePixel = 0
            fill.ZIndex = 12
            
            local fillCorner = Instance.new("UICorner")
            fillCorner.CornerRadius = UDim.new(1, 0)
            fillCorner.Parent = fill
            
            fill.Parent = track
            
            -- Handle (bolinha)
            local handle = Instance.new("Frame")
            handle.Name = "Handle"
            handle.Size = UDim2.new(0, 16, 0, 16)
            handle.Position = UDim2.new(percent, -8, 0.5, -8)
            handle.BackgroundColor3 = Color3.new(1, 1, 1)
            handle.BorderSizePixel = 0
            handle.ZIndex = 13
            
            local handleCorner = Instance.new("UICorner")
            handleCorner.CornerRadius = UDim.new(1, 0)
            handleCorner.Parent = handle
            
            local handleStroke = Instance.new("UIStroke")
            handleStroke.Color = theme.Primary
            handleStroke.Thickness = 2
            handleStroke.Parent = handle
            
            handle.Parent = track
            
            track.Parent = sliderFrame
            
            -- Intera√ß√£o
            local dragging = false
            
            local function updateValue(input)
                if not track then return end
                
                local xPos = math.clamp(
                    (input.Position.X - track.AbsolutePosition.X) / track.AbsoluteSize.X,
                    0, 1
                )
                
                local value = Utilities.Round(
                    slider.Min + (slider.Max - slider.Min) * xPos,
                    slider.Precision
                )
                
                if value ~= slider.Value then
                    slider.Value = value
                    label.Text = slider.Name .. ": " .. Utilities.Round(value, slider.Precision) .. slider.Suffix
                    fill.Size = UDim2.new(xPos, 0, 1, 0)
                    handle.Position = UDim2.new(xPos, -8, 0.5, -8)
                    
                    -- Executar callback
                    local success, err = pcall(slider.Callback, value)
                    if not success then
                        warn("[BoladoHub] Erro no slider '" .. slider.Name .. "': " .. err)
                    end
                end
            end
            
            local function startDrag(input)
                if input.UserInputType == Enum.UserInputType.MouseButton1 then
                    dragging = true
                    updateValue(input)
                end
            end
            
            local function endDrag(input)
                if input.UserInputType == Enum.UserInputType.MouseButton1 then
                    dragging = false
                end
            end
            
            track.InputBegan:Connect(startDrag)
            track.InputEnded:Connect(endDrag)
            handle.InputBegan:Connect(startDrag)
            handle.InputEnded:Connect(endDrag)
            
            local sliderConnection = UserInputService.InputChanged:Connect(function(input)
                if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
                    updateValue(input)
                end
            end)
            
            table.insert(self._connections, sliderConnection)
            
            slider.Instance = sliderFrame
            slider.Label = label
            slider.Track = track
            slider.Fill = fill
            slider.Handle = handle
            
            table.insert(tab.Elements, slider)
            return slider
        end
        
        function tab:CreateLabel(labelOptions)
            local elementId = #tab.Elements + 1
            local theme = Themes[BoladoHub._theme]
            
            local label = {
                Type = "Label",
                Text = labelOptions.Text or "Label " .. elementId,
                Color = labelOptions.Color or theme.Text,
                Font = labelOptions.Font or Enum.Font.RobotoMono,
                Size = labelOptions.Size or 14,
                Alignment = labelOptions.Alignment or Enum.TextXAlignment.Left,
                LayoutOrder = elementId
            }
            
            local labelFrame = Instance.new("TextLabel")
            labelFrame.Name = "Label_" .. elementId
            labelFrame.Size = UDim2.new(1, 0, 0, labelOptions.Height or 25)
            labelFrame.BackgroundTransparency = 1
            labelFrame.Text = label.Text
            labelFrame.TextColor3 = label.Color
            labelFrame.Font = label.Font
            labelFrame.TextSize = label.Size
            labelFrame.TextXAlignment = label.Alignment
            labelFrame.LayoutOrder = elementId
            labelFrame.ZIndex = 10
            labelFrame.Parent = tabFrame
            
            label.Instance = labelFrame
            
            table.insert(tab.Elements, label)
            return label
        end
        
        function tab:CreateTextBox(textboxOptions)
            local elementId = #tab.Elements + 1
            local theme = Themes[BoladoHub._theme]
            
            local textbox = {
                Type = "TextBox",
                Placeholder = textboxOptions.Placeholder or "Digite aqui...",
                Default = textboxOptions.Default or "",
                Callback = textboxOptions.Callback or function() end,
                ClearOnFocus = textboxOptions.ClearOnFocus or false,
                LayoutOrder = elementId
            }
            
            local textboxFrame = Instance.new("Frame")
            textboxFrame.Name = "TextBox_" .. elementId
            textboxFrame.Size = UDim2.new(1, 0, 0, 35)
            textboxFrame.BackgroundTransparency = 1
            textboxFrame.LayoutOrder = elementId
            textboxFrame.ZIndex = 10
            
            local inputBox = Instance.new("TextBox")
            inputBox.Name = "Input"
            inputBox.Size = UDim2.new(1, 0, 1, 0)
            inputBox.BackgroundColor3 = theme.Surface
            inputBox.TextColor3 = theme.Text
            inputBox.PlaceholderText = textbox.Placeholder
            inputBox.PlaceholderColor3 = theme.Text2
            inputBox.Text = textbox.Default
            inputBox.Font = Enum.Font.RobotoMono
            inputBox.TextSize = 14
            inputBox.ClearTextOnFocus = textbox.ClearOnFocus
            inputBox.ZIndex = 11
            
            local boxCorner = Instance.new("UICorner")
            boxCorner.CornerRadius = UDim.new(0, 6)
            boxCorner.Parent = inputBox
            
            local stroke = Instance.new("UIStroke")
            stroke.Color = theme.Border
            stroke.Thickness = 1
            stroke.Parent = inputBox
            
            -- Eventos
            inputBox.FocusLost:Connect(function(enterPressed)
                local success, err = pcall(textbox.Callback, inputBox.Text, enterPressed)
                if not success then
                    warn("[BoladoHub] Erro no TextBox: " .. err)
                end
            end)
            
            inputBox.Parent = textboxFrame
            textboxFrame.Parent = tabFrame
            
            textbox.Instance = textboxFrame
            textbox.Input = inputBox
            
            table.insert(tab.Elements, textbox)
            return textbox
        end
        
        function tab:CreateDropdown(dropdownOptions)
            local elementId = #tab.Elements + 1
            local theme = Themes[BoladoHub._theme]
            
            local dropdown = {
                Type = "Dropdown",
                Name = dropdownOptions.Name or "Dropdown " .. elementId,
                Options = dropdownOptions.Options or {"Op√ß√£o 1", "Op√ß√£o 2", "Op√ß√£o 3"},
                Default = dropdownOptions.Default or 1,
                Callback = dropdownOptions.Callback or function() end,
                Open = false,
                Selected = dropdownOptions.Default or 1,
                LayoutOrder = elementId
            }
            
            local dropdownFrame = Instance.new("Frame")
            dropdownFrame.Name = "Dropdown_" .. elementId
            dropdownFrame.Size = UDim2.new(1, 0, 0, 35)
            dropdownFrame.BackgroundTransparency = 1
            dropdownFrame.LayoutOrder = elementId
            dropdownFrame.ZIndex = 10
            dropdownFrame.ClipsDescendants = true
            
            -- Bot√£o principal
            local mainButton = Instance.new("TextButton")
            mainButton.Name = "MainButton"
            mainButton.Size = UDim2.new(1, 0, 0, 35)
            mainButton.BackgroundColor3 = theme.Surface2
            mainButton.Text = dropdown.Name .. ": " .. dropdown.Options[dropdown.Selected]
            mainButton.TextColor3 = theme.Primary
            mainButton.Font = Enum.Font.RobotoMono
            mainButton.TextSize = 14
            mainButton.AutoButtonColor = false
            mainButton.ZIndex = 11
            
            local btnCorner = Instance.new("UICorner")
            btnCorner.CornerRadius = UDim.new(0, 6)
            btnCorner.Parent = mainButton
            
            local stroke = Instance.new("UIStroke")
            stroke.Color = theme.Border
            stroke.Thickness = 1
            stroke.Parent = mainButton
            
            -- √çcone de seta
            local arrow = Instance.new("TextLabel")
            arrow.Name = "Arrow"
            arrow.Size = UDim2.new(0, 20, 0, 20)
            arrow.Position = UDim2.new(1, -25, 0.5, -10)
            arrow.BackgroundTransparency = 1
            arrow.Text = "‚ñº"
            arrow.TextColor3 = theme.Primary
            arrow.Font = Enum.Font.RobotoMono
            arrow.TextSize = 12
            arrow.ZIndex = 12
            arrow.Parent = mainButton
            
            -- Container de op√ß√µes
            local optionsContainer = Instance.new("Frame")
            optionsContainer.Name = "OptionsContainer"
            optionsContainer.Size = UDim2.new(1, 0, 0, 0)
            optionsContainer.Position = UDim2.new(0, 0, 0, 40)
            optionsContainer.BackgroundColor3 = theme.Surface
            optionsContainer.Visible = false
            optionsContainer.ZIndex = 15
            
            local optionsCorner = Instance.new("UICorner")
            optionsCorner.CornerRadius = UDim.new(0, 6)
            optionsCorner.Parent = optionsContainer
            
            local optionsStroke = Instance.new("UIStroke")
            optionsStroke.Color = theme.Border
            optionsStroke.Thickness = 1
            optionsStroke.Parent = optionsContainer
            
            local optionsList = Instance.new("UIListLayout")
            optionsList.Padding = UDim.new(0, 2)
            optionsList.SortOrder = Enum.SortOrder.LayoutOrder
            optionsList.Parent = optionsContainer
            
            -- Criar op√ß√µes
            local function createOptions()
                optionsContainer:ClearAllChildren()
                
                for i, option in pairs(dropdown.Options) do
                    local optionButton = Instance.new("TextButton")
                    optionButton.Name = "Option_" .. i
                    optionButton.Size = UDim2.new(1, -10, 0, 30)
                    optionButton.Position = UDim2.new(0, 5, 0, (i-1)*32)
                    optionButton.BackgroundColor3 = (i == dropdown.Selected) and Color3.fromRGB(60, 60, 90) or Color3.fromRGB(50, 50, 70)
                    optionButton.Text = option
                    optionButton.TextColor3 = (i == dropdown.Selected) and theme.Primary : theme.Text2
                    optionButton.Font = Enum.Font.RobotoMono
                    optionButton.TextSize = 13
                    optionButton.AutoButtonColor = false
                    optionButton.LayoutOrder = i
                    optionButton.ZIndex = 16
                    
                    local optCorner = Instance.new("UICorner")
                    optCorner.CornerRadius = UDim.new(0, 4)
                    optCorner.Parent = optionButton
                    
                    -- Efeitos hover
                    optionButton.MouseEnter:Connect(function()
                        if i ~= dropdown.Selected then
                            TweenService:Create(optionButton, TweenInfo.new(0.2), {
                                BackgroundColor3 = Color3.fromRGB(70, 70, 100)
                            }):Play()
                        end
                    end)
                    
                    optionButton.MouseLeave:Connect(function()
                        if i ~= dropdown.Selected then
                            TweenService:Create(optionButton, TweenInfo.new(0.2), {
                                BackgroundColor3 = Color3.fromRGB(50, 50, 70)
                            }):Play()
                        end
                    end)
                    
                    -- Selecionar op√ß√£o
                    optionButton.MouseButton1Click:Connect(function()
                        dropdown.Selected = i
                        mainButton.Text = dropdown.Name .. ": " .. option
                        
                        -- Atualizar cores
                        for _, child in pairs(optionsContainer:GetChildren()) do
                            if child:IsA("TextButton") then
                                local idx = tonumber(string.match(child.Name, "%d+"))
                                child.BackgroundColor3 = (idx == i) and Color3.fromRGB(60, 60, 90) or Color3.fromRGB(50, 50, 70)
                                child.TextColor3 = (idx == i) and theme.Primary or theme.Text2
                            end
                        end
                        
                        -- Fechar dropdown
                        TweenService:Create(arrow, TweenInfo.new(0.2), {
                            Rotation = 0
                        }):Play()
                        
                        TweenService:Create(optionsContainer, TweenInfo.new(0.2), {
                            Size = UDim2.new(1, 0, 0, 0)
                        }):Play()
                        
                        dropdown.Open = false
                        
                        task.wait(0.2)
                        optionsContainer.Visible = false
                        
                        -- Executar callback
                        local success, err = pcall(dropdown.Callback, option, i)
                        if not success then
                            warn("[BoladoHub] Erro no dropdown '" .. dropdown.Name .. "': " .. err)
                        end
                    end)
                    
                    optionButton.Parent = optionsContainer
                end
                
                -- Ajustar tamanho do container
                local optionCount = #dropdown.Options
                optionsContainer.Size = UDim2.new(1, 0, 0, optionCount * 32 + 5)
            end
            
            createOptions()
            
            -- Alternar dropdown
            mainButton.MouseButton1Click:Connect(function()
                dropdown.Open = not dropdown.Open
                
                if dropdown.Open then
                    optionsContainer.Visible = true
                    TweenService:Create(arrow, TweenInfo.new(0.2), {
                        Rotation = 180
                    }):Play()
                    
                    TweenService:Create(optionsContainer, TweenInfo.new(0.2), {
                        Size = UDim2.new(1, 0, 0, #dropdown.Options * 32 + 5)
                    }):Play()
                else
                    TweenService:Create(arrow, TweenInfo.new(0.2), {
                        Rotation = 0
                    }):Play()
                    
                    TweenService:Create(optionsContainer, TweenInfo.new(0.2), {
                        Size = UDim2.new(1, 0, 0, 0)
                    }):Play()
                    
                    task.wait(0.2)
                    optionsContainer.Visible = false
                end
            end)
            
            -- Fechar ao clicar fora
            local closeConnection
            closeConnection = game:GetService("UserInputService").InputBegan:Connect(function(input)
                if dropdown.Open and input.UserInputType == Enum.UserInputType.MouseButton1 then
                    local mousePos = game:GetService("Players").LocalPlayer:GetMouse()
                    if not dropdownFrame:IsDescendantOf(mainButton) and not optionsContainer:IsDescendantOf(mainButton) then
                        if not (dropdownFrame.AbsolutePosition.X <= mousePos.X and mousePos.X <= dropdownFrame.AbsolutePosition.X + dropdownFrame.AbsoluteSize.X and
                               dropdownFrame.AbsolutePosition.Y <= mousePos.Y and mousePos.Y <= dropdownFrame.AbsolutePosition.Y + dropdownFrame.AbsoluteSize.Y) then
                            
                            dropdown.Open = false
                            TweenService:Create(arrow, TweenInfo.new(0.2), {
                                Rotation = 0
                            }):Play()
                            
                            TweenService:Create(optionsContainer, TweenInfo.new(0.2), {
                                Size = UDim2.new(1, 0, 0, 0)
                            }):Play()
                            
                            task.wait(0.2)
                            optionsContainer.Visible = false
                        end
                    end
                end
            end)
            
            table.insert(self._connections, closeConnection)
            
            mainButton.Parent = dropdownFrame
            optionsContainer.Parent = dropdownFrame
            dropdownFrame.Parent = tabFrame
            
            dropdown.Instance = dropdownFrame
            dropdown.MainButton = mainButton
            dropdown.OptionsContainer = optionsContainer
            dropdown.Arrow = arrow
            
            table.insert(tab.Elements, dropdown)
            return dropdown
        end
        
        function tab:CreateKeybind(keybindOptions)
            local elementId = #tab.Elements + 1
            local theme = Themes[BoladoHub._theme]
            
            local keybind = {
                Type = "Keybind",
                Name = keybindOptions.Name or "Keybind " .. elementId,
                Default = keybindOptions.Default or Enum.KeyCode.F,
                Callback = keybindOptions.Callback or function() end,
                Listening = false,
                Key = keybindOptions.Default or Enum.KeyCode.F,
                LayoutOrder = elementId
            }
            
            local keybindFrame = Instance.new("Frame")
            keybindFrame.Name = "Keybind_" .. elementId
            keybindFrame.Size = UDim2.new(1, 0, 0, 30)
            keybindFrame.BackgroundTransparency = 1
            keybindFrame.LayoutOrder = elementId
            keybindFrame.ZIndex = 10
            
            -- Label
            local label = Instance.new("TextLabel")
            label.Name = "Label"
            label.Size = UDim2.new(0.7, 0, 1, 0)
            label.Position = UDim2.new(0, 0, 0, 0)
            label.BackgroundTransparency = 1
            label.Text = keybind.Name
            label.TextColor3 = theme.Text
            label.Font = Enum.Font.RobotoMono
            label.TextSize = 14
            label.TextXAlignment = Enum.TextXAlignment.Left
            label.ZIndex = 11
            label.Parent = keybindFrame
            
            -- Bot√£o da tecla
            local keyButton = Instance.new("TextButton")
            keyButton.Name = "KeyButton"
            keyButton.Size = UDim2.new(0, 80, 0, 25)
            keyButton.Position = UDim2.new(1, -85, 0.5, -12.5)
            keyButton.BackgroundColor3 = theme.Surface2
            keyButton.Text = keybind.Key.Name
            keyButton.TextColor3 = theme.Primary
            keyButton.Font = Enum.Font.RobotoMono
            keyButton.TextSize = 12
            keyButton.AutoButtonColor = false
            keyButton.ZIndex = 11
            
            local btnCorner = Instance.new("UICorner")
            btnCorner.CornerRadius = UDim.new(0, 4)
            btnCorner.Parent = keyButton
            
            local stroke = Instance.new("UIStroke")
            stroke.Color = theme.Border
            stroke.Thickness = 1
            stroke.Parent = keyButton
            
            -- Ouvir entrada
            local function startListening()
                keybind.Listening = true
                keyButton.Text = "[...]"
                keyButton.BackgroundColor3 = theme.Warning
                
                local connection
                connection = UserInputService.InputBegan:Connect(function(input)
                    if input.UserInputType == Enum.UserInputType.Keyboard then
                        keybind.Key = input.KeyCode
                        keyButton.Text = input.KeyCode.Name
                        keybind.Listening = false
                        
                        TweenService:Create(keyButton, TweenInfo.new(0.2), {
                            BackgroundColor3 = theme.Surface2
                        }):Play()
                        
                        connection:Disconnect()
                    end
                end)
            end
            
            keyButton.MouseButton1Click:Connect(function()
                if not keybind.Listening then
                    startListening()
                end
            end)
            
            -- Conectar tecla
            local keyConnection = UserInputService.InputBegan:Connect(function(input)
                if input.KeyCode == keybind.Key and not keybind.Listening then
                    local success, err = pcall(keybind.Callback)
                    if not success then
                        warn("[BoladoHub] Erro no keybind '" .. keybind.Name .. "': " .. err)
                    end
                end
            end)
            
            table.insert(self._connections, keyConnection)
            
            keyButton.Parent = keybindFrame
            keybindFrame.Parent = tabFrame
            
            keybind.Instance = keybindFrame
            keybind.KeyButton = keyButton
            
            table.insert(tab.Elements, keybind)
            return keybind
        end
        
        function tab:Clear()
            for _, element in pairs(tab.Elements) do
                if element.Instance then
                    element.Instance:Destroy()
                end
            end
            tab.Elements = {}
        end
        
        -- Configurar primeira aba
        if tabId == 1 then
            switchToTab()
        end
        
        table.insert(window.Tabs, tab)
        table.insert(window.Elements, tab)
        
        return tab
    end
    
    function window:Destroy()
        if windowFrame then
            windowFrame:Destroy()
        end
        
        for i, win in pairs(self._windows) do
            if win.Id == windowId then
                table.remove(self._windows, i)
                break
            end
        end
    end
    
    function window:Show()
        windowFrame.Visible = true
    end
    
    function window:Hide()
        windowFrame.Visible = false
    end
    
    function window:SetPosition(x, y)
        windowFrame.Position = UDim2.new(0, x, 0, y)
    end
    
    function window:SetSize(width, height)
        windowFrame.Size = UDim2.new(0, width, 0, height)
    end
    
    -- Adicionar √† janela principal
    windowFrame.Parent = self._mainGui
    window.Instance = windowFrame
    
    table.insert(self._windows, window)
    return window
end

-- Sistema de notifica√ß√µes
function BoladoHub:_CreateNotification(title, message, duration, notifType)
    duration = duration or 5
    notifType = notifType or "Info"
    
    local theme = Themes[self._theme]
    local colors = {
        Info = theme.Primary,
        Success = theme.Success,
        Warning = theme.Warning,
        Error = theme.Error
    }
    
    local color = colors[notifType] or theme.Primary
    
    local notifId = #self._notifications + 1
    local notification = {
        Id = notifId,
        Title = title,
        Message = message,
        Duration = duration
    }
    
    local notifFrame = Instance.new("Frame")
    notifFrame.Name = "Notification_" .. notifId
    notifFrame.Size = UDim2.new(0, 300, 0, 0)
    notifFrame.Position = UDim2.new(1, -320, 1, -80)
    notifFrame.BackgroundColor3 = theme.Background
    notifFrame.BorderSizePixel = 0
    notifFrame.ZIndex = 100
    notifFrame.ClipsDescendants = true
    
    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, 8)
    corner.Parent = notifFrame
    
    local stroke = Instance.new("UIStroke")
    stroke.Color = color
    stroke.Thickness = 2
    stroke.Parent = notifFrame
    
    -- Barra de progresso
    local progressBar = Instance.new("Frame")
    progressBar.Name = "ProgressBar"
    progressBar.Size = UDim2.new(0, 0, 0, 3)
    progressBar.Position = UDim2.new(0, 0, 1, -3)
    progressBar.BackgroundColor3 = color
    progressBar.BorderSizePixel = 0
    progressBar.ZIndex = 101
    
    local progressCorner = Instance.new("UICorner")
    progressCorner.CornerRadius = UDim.new(0, 8)
    progressCorner.Parent = progressBar
    
    -- T√≠tulo
    local titleLabel = Instance.new("TextLabel")
    titleLabel.Name = "Title"
    titleLabel.Size = UDim2.new(1, -20, 0, 25)
    titleLabel.Position = UDim2.new(0, 10, 0, 10)
    titleLabel.BackgroundTransparency = 1
    titleLabel.Text = title
    titleLabel.TextColor3 = color
    titleLabel.Font = Enum.Font.RobotoMono.Bold
    titleLabel.TextSize = 16
    titleLabel.TextXAlignment = Enum.TextXAlignment.Left
    titleLabel.ZIndex = 101
    titleLabel.Parent = notifFrame
    
    -- Mensagem
    local messageLabel = Instance.new("TextLabel")
    messageLabel.Name = "Message"
    messageLabel.Size = UDim2.new(1, -20, 0, 0)
    messageLabel.Position = UDim2.new(0, 10, 0, 35)
    messageLabel.BackgroundTransparency = 1
    messageLabel.Text = message
    messageLabel.TextColor3 = theme.Text
    messageLabel.Font = Enum.Font.RobotoMono
    messageLabel.TextSize = 14
    messageLabel.TextXAlignment = Enum.TextXAlignment.Left
    messageLabel.TextYAlignment = Enum.TextYAlignment.Top
    messageLabel.TextWrapped = true
    messageLabel.ZIndex = 101
    messageLabel.Parent = notifFrame
    
    -- Ajustar altura baseada no texto
    local textHeight = math.min(messageLabel.TextBounds.Y, 100)
    local totalHeight = textHeight + 50
    
    messageLabel.Size = UDim2.new(1, -20, 0, textHeight)
    notifFrame.Size = UDim2.new(0, 300, 0, totalHeight)
    notifFrame.Position = UDim2.new(1, -320, 1, -totalHeight - 20)
    
    progressBar.Parent = notifFrame
    notifFrame.Parent = self._notifyContainer
    
    -- Anima√ß√£o de entrada
    notifFrame.Position = UDim2.new(1, 320, 1, -totalHeight - 20)
    TweenService:Create(notifFrame, TweenInfo.new(0.3), {
        Position = UDim2.new(1, -320, 1, -totalHeight - 20)
    }):Play()
    
    TweenService:Create(notifFrame, TweenInfo.new(0.2), {
        Size = UDim2.new(0, 300, 0, totalHeight)
    }):Play()
    
    -- Animar barra de progresso
    TweenService:Create(progressBar, TweenInfo.new(duration), {
        Size = UDim2.new(1, 0, 0, 3)
    }):Play()
    
    -- Auto-destruir
    task.spawn(function()
        task.wait(duration)
        
        TweenService:Create(notifFrame, TweenInfo.new(0.3), {
            Position = UDim2.new(1, 320, 1, -totalHeight - 20)
        }):Play()
        
        task.wait(0.3)
        notifFrame:Destroy()
        
        for i, notif in pairs(self._notifications) do
            if notif.Id == notifId then
                table.remove(self._notifications, i)
                break
            end
        end
    end)
    
    table.insert(self._notifications, notification)
    return notification
end

-- Destruir tudo
function BoladoHub:_DestroyAll()
    if self._mainGui then
        self._mainGui:Destroy()
    end
    
    for _, connection in pairs(self._connections) do
        if connection then
            connection:Disconnect()
        end
    end
    
    self._windows = {}
    self._notifications = {}
    self._connections = {}
    
    print("üßπ BoladoHub destru√≠do completamente")
end

-- Fun√ß√£o de carregamento
local function LoadLibrary()
    return BoladoHub
end

-- Interface p√∫blica
BoladoHub.Load = BoladoHub.Init

return LoadLibrary()